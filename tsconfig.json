{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.spec.ts"
  ]
}
